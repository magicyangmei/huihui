.location-header{
    display: flex;
    justify-content: center;
    border-radius: 0 0 100% 100%;
    background-size:cover;
    align-items:center;
}
.location-header .search_btn{
    border: none;
    background: #e02e24;
}
.location-header .search_btn view.goSearch {
    margin-top: 20rpx;
    color: #999;
}
.community{
    text-align: center;
    display: flex;
    flex-flow: column wrap;
    justify-content: space-around;
    width: 96vw;
    margin:30rpx auto;
}
.community-box{
    padding: 20rpx 0;
    background: #fff;
    border-radius: 10px;
    border: 1px solid #e9e9e9;
}
.community-box .portrait{
    display: block;
    margin:20rpx auto;
    height: 100rpx;
    width: 100rpx;
    border-radius: 100%;
    border:2px solid #e8e8e8;
}
.community-box .address-info{
    font-weight: bold;
    font-size: 40rpx;
    margin-bottom:15rpx;
}
.community-near{
    margin-top: 40rpx;
    background: #fff;
    padding: 40rpx 0;
}
.community-near .community-box{
    position: relative;
    width: 88%;
    border-radius: 0;
    border:none;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx;
    border-bottom: 1px solid #e9e9e9;
}
.community-near .community-box:last-child{
    border-bottom: none;
}
.community-near .near-title{
    border-left: 3px solid #e02e24;
    padding-left: 20rpx;
    font-weight: bold;
    font-size: 40rpx;
}
.community-near .address-info .distance{
    float: right;
    color: #e02e24;
    font-size: 24rpx;
    font-weight: normal;
}
.community-near .text-info{
    flex:1;
    margin-left: 20rpx;
}
.community-near .text-info .address-info{
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.community-near .community-box .arrow-right{
   position: absolute;
   right: 40rpx;
   bottom: 40rpx;
   width: 40rpx;
   height: 40rpx;
}
.community-near .text-info .address{
    margin-bottom: 10rpx;
}
.community-near .text-info  .storeChref{
    color: #999;
}
 