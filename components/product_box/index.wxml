  <view class="goods-box" wx:for="{{pList}}" wx:key="childIndex" wx:for-item="childItem" bindtap="product_detail" data-id="{{childItem.id}}">
    <view class="img-box"><image class='imgBoxInner' src="{{childItem.pic}}"></image></view>
    <!-- <text class="goods-title">{{childItem.name}}</text> -->
    <text class="goods-price more-price market-price">市场价：￥{{childItem.minPrice}}</text>
    <text class="goods-price more-price">惠店价：￥{{childItem.minPrice}}</text>
    <text class="goods-price more-price">汇惠价：￥{{childItem.minPrice}}</text>
  </view>
</view>